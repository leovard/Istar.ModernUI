<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:code="clr-namespace:IstarWindows.Code">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Istar.ModernUI;component/Assets/ModernUI.Light.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Rectangle x:Key="WindowBackgroundContent" x:Shared="false">
        <Rectangle.Fill>
            <ImageBrush Opacity=".3"
                        Stretch="UniformToFill"
                        code:BingImage.UseBingImage="True" />
        </Rectangle.Fill>
    </Rectangle>

</ResourceDictionary>